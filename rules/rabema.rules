from math import log10, ceil

def make_parts(p):
    return [str(x).zfill(int(ceil(log10(p)))) for x in range(0, p)]
rule rabema_prepare:
    input:
        temp("{prefix}.razers3_gold_unprep.qname.bam")
    output:
        temp("{prefix}.razers3_gold_prep.bam")
    shell:
        "./bin/rabema_prepare_sam -i {input} -o {output}"


rule rabema_gold:
    input:
        ref="{prefix}/{reference}.fasta",
        bam="{prefix}/{reads}#{part}.{reference}.razers3_gold_prep.coord.bam"
    output:
        temp("{prefix}/{reads}#{part}.{reference}.{errors}.gsi")
    wildcard_constraints:
        reads="[A-Za-z0-9_]+"
    log:
        "{prefix}/{reads}#{part}.{reference}.{errors}.gsi.log"
    shell:
        "rabema_build_gold_standard "
        "--max-error {wildcards.errors} --distance-metric edit "
        "--reference {input.ref} --in-bam {input.bam} "
        "--out-gsi {output} "
        "2> {log}"


rule rabema_gold_merge:
    input:
        first=expand("{{prefix}}/{{reads}}#{part}.{{reference}}.{{errors}}.gsi",
                     part=make_parts(config.get("parts", 1)))[0],
        other=expand("{{prefix}}/{{reads}}#{part}.{{reference}}.{{errors}}.gsi",
                     part=make_parts(config.get("parts", 1)))[1:]
    output:
        protected("{prefix}/{reads}.{reference}.{errors}.gsi.gz")
    wildcard_constraints:
        reads="[A-Za-z0-9_]+"
    log:
        "{prefix}/{reads}.{reference}.{errors}.gsi.log"
    shell:
        "gzip -c {input.first} > {output} && tail -q -n +4 {input.other} | gzip -c >> {output}"


